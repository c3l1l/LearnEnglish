@model LearnEnglish.ViewModels.CategoryViewModel
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>

            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Main row -->
        <div class="row">
            <div class="col-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Update Category Panel</h3>
                    </div>
                    <form  method="post" id="form_category_edit">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Category Id: </label>
                                <div class="col-sm-10">
                                    @*<span id="section_section_id"  class="form-control" value="@Model.SectionId">@Model.SectionId</span>*@
                                    <span id="category_category_id" class="form-control" value="@Model.CategoryId">@Model.CategoryId</span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-2 col-form-label">Category Name</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.CategoryType, "Category", new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-10">

                                    @Html.DropDownListFor(m => m.CategoryType, new SelectList(Enum.GetValues(typeof(CategoryType))), new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="SectionId" class="col-sm-2 col-form-label">Select Section</label>
                                <div class="col-sm-10">
                                    <select asp-for=SectionId asp-items=@ViewBag.Sections class="form-control">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.row (main row) -->       
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

@section PageStyles{
    <link href="~/adminlte/plugins/sweetalert2/sweetalert2.css" rel="stylesheet" />
    <link href="~/adminlte/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.css" rel="stylesheet" />
}
@section PageScripts{
    <script src="~/js/pages/category.js" asp-append-version="true"></script>
    <script src="~/adminlte/plugins/sweetalert2/sweetalert2.js"></script>
    <script src="~/adminlte/plugins/jquery-validation/jquery.validate.js"></script>
    <script>
        $('#section_card').hide();
    </script>
}