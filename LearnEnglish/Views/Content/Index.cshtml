@model List<LearnEnglish.ViewModels.ContentViewModel>
@*@model IQueryable<dynamic>*@
    

    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard v1</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <div class="col">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Content List</h3>
                            <div class="card-tools">
                                <div class="input-group input-group-sm float-left " style="width: 50px; ">
                                    <a class="btn btn-primary btn-sm" asp-controller="Content" asp-action="Add">Add</a>
                                </div>
                                <div class="input-group input-group-sm " style="width: 250px;">
                                    <form id="form_category_search">
                                        <div class="input-group">
                                            <input type="text" id="category_name" style="float: left" name="table_search" class="form-control float-right" placeholder="Search">

                                            <button class="btn btn-default" style="float: left">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap" id="category_list">
                                <thead>
                                    <tr>
                                        @*<th><i class="fa fa-bars"></i></th>
                                            <th>@Html.DisplayNameFor(m => m.SingleOrDefault().Category.CategoryId)</th>
                                            <th>@Html.DisplayNameFor(m => m.SingleOrDefault().ContentId)</th>
                                            <th>@Html.DisplayNameFor(m => m.SingleOrDefault().Title)</th>
                                            <th>@Html.DisplayNameFor(m => m.SingleOrDefault().ContentType)</th>
                                            <th>@Html.DisplayNameFor(m => m.SingleOrDefault().Rank)</th>
                                            <th>@Html.DisplayNameFor(m => m.SingleOrDefault().CreatedDate)</th>
                                            <th></th>*@

                                    </tr>
                                </thead>
                                <tbody class="sortable" id="sortable_body">
                                    @*@foreach (var content in Model)
                                    {
                                        @content.Title
                                        <br />

                                    }*@
                                    @foreach (var content in Model)
                                        {
                                    <tr id="ord-@content.ContentId">
                                        <td><i class="fa fa-bars"></i></td>
                                        <td>@Html.DisplayFor(t => content.ThemeName)</td>
                                        <td>@Html.DisplayFor(t => content.SectionName)</td>
                                        <td class="text-success font-weight-bold">@Html.DisplayFor(t => content.Category.Name)</td>
                                        <td>@Html.DisplayFor(t => content.ContentId)</td>
                                        <td>@Html.DisplayFor(t => content.Title)</td>
                                        <td><b>@Html.DisplayFor(t => content.ContentType)</b></td>
                                        <td>@Html.DisplayFor(t => content.Rank)</td>
                                        <td>@content.CreatedDate.ToShortDateString()</td>

                                        <td>
                                            <a class="btn btn-success" asp-controller="Content" asp-action="Details" asp-route-id="@(content.ContentId)">Edit</a>
                                            <button type="button" class="btn btn-danger" onclick="ContentDeleteConfirm(@(content.ContentId))">
                                                <i class="fa fa-sm fa-trash-alt"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                        }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

    @section PageStyles{
        <link href="~/adminlte/plugins/sweetalert2/sweetalert2.css" rel="stylesheet" />
        <link href="~/adminlte/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.css" rel="stylesheet" />
    }

    @section PageScripts{
        <script src="~/js/pages/content.js" asp-append-version="true"></script>
        <script src="~/adminlte/plugins/sweetalert2/sweetalert2.js"></script>
    }
